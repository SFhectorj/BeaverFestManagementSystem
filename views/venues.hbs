<h1>Manage Venues</h1>

<div id="browse">
    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>ID</th>
                <th>Venue Name</th>
                <th>Capacity</th>
                <th>Type</th>
                <th>Location Description</th>
                <th>Manager</th>
                <th>Sponsor</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each venues}}
            <tr>
                <td>{{this.venueID}}</td>
                <td>{{this.venueName}}</td>
                <td>{{this.capacity}}</td>
                <td>{{this.venueType}}</td>
                <td>{{this.locationDescription}}</td>
                <td>{{this.managerName}}</td> 
                <td>{{this.sponsorName}}</td> 
                <td>
                    <a href="/update-venue/{{this.venueID}}">
                        <button>Edit</button>
                    </a>
                    <button>Delete</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p>&nbsp;</p>
</div>

<div id="insert">
    <h2>Add a New Venue</h2>
    <form id="add-venue-form" method="POST" action="/add-venue-form">
        <fieldset>
            <legend>Venue Details</legend>
            
            <label for="input-venueName">Venue Name: </label>
            <input type="text" name="input-venueName" id="input-venueName" required>
            
            <label for="input-capacity">Capacity: </label>
            <input type="number" name="input-capacity" id="input-capacity" required>

            <label for="input-venueType">Type: </label>
            <select name="input-venueType" id="input-venueType">
                <option value="Stage">Stage</option>
                <option value="Booth">Booth</option>
                <option value="Lounge">Lounge</option>
            </select>

            <label for="input-locationDescription">Location Description: </label>
            <input type="text" name="input-locationDescription" id="input-locationDescription">

            <label for="input-manager">Manager: </label>
            <select name="input-manager" id="input-manager" required>
                <option value="">Select a Manager</option>
                {{#each managers}}
                <option value="{{this.managerId}}">{{this.firstName}} {{this.lastName}}</option>
                {{/each}}
            </select>

            <label for="input-sponsor">Sponsor: </label>
            <select name="input-sponsor" id="input-sponsor" required>
                <option value="">Select a Sponsor</option>
                {{#each sponsors}}
                <option value="{{this.sponsorId}}">{{this.sponsorName}}</option>
                {{/each}}
            </select>

            <input type="submit" value="Add Venue">
        </fieldset>
    </form>
</div>
