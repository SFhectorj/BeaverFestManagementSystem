<h1>Update Band</h1>

<p>Use the form below to update the details for <strong>{{band.bandName}}</strong>.</p>

<form id="update-band-form" method="POST" action="/put-band-form">
    <fieldset>
        <legend>Edit Band Details</legend>
        
        <input type="hidden" name="bandId" value="{{band.bandId}}">
        
        <label for="input-bandName">Band Name: </label>
        <input type="text" name="input-bandName" id="input-bandName" value="{{band.bandName}}" required>
        
        <label for="input-genre">Genre: </label>
        <input type="text" name="input-genre" id="input-genre" value="{{band.genre}}">

        <label for="input-email">Contact Email: </label>
        <input type="email" name="input-email" id="input-email" value="{{band.contactEmail}}">

        <label for="input-estimatedDraw">Estimated Draw: </label>
        <input type="number" name="input-estimatedDraw" id="input-estimatedDraw" value="{{band.estimatedDraw}}">

        <input type="submit" value="Save Changes">
        <a href="/bands"><button type="button">Cancel</button></a>
    </fieldset>
</form>
