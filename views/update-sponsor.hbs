<h1>Update Sponsor</h1>
<form id="update-sponsor-form" method="POST" action="/put-sponsor-form">
    <fieldset>
        <legend>Edit Sponsor Details</legend>
        <input type="hidden" name="sponsorID" value="{{sponsor.sponsorID}}">
        
        <label for="input-sponsorName">Sponsor Name: </label>
        <input type="text" name="input-sponsorName" id="input-sponsorName" value="{{sponsor.sponsorName}}" required>

        <label for="input-contactName">Contact Name: </label>
        <input type="text" name="input-contactName" id="input-contactName" value="{{sponsor.contactName}}">

        <label for="input-contactEmail">Contact Email: </label>
        <input type="email" name="input-contactEmail" id="input-contactEmail" value="{{sponsor.contactEmail}}">

        <label for="input-phone">Phone: </label>
        <input type="tel" name="input-phone" id="input-phone" value="{{sponsor.phone}}">

        <label for="input-industry">Industry: </label>
        <input type="text" name="input-industry" id="input-industry" value="{{sponsor.industry}}">

        <input type="submit" value="Save Changes">
        <a href="/sponsors"><button type="button">Cancel</button></a>
    </fieldset>
</form>

<script>
    // Format the date for the HTML input (YYYY-MM-DD)
    let rawDate = '{{sponsor.contractDate}}';
    if(rawDate) {
        let formattedDate = new Date(rawDate).toISOString().split('T')[0];
        document.getElementById('input-date').value = formattedDate;
    }
</script>
